<h1>Listing donors</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Push reg</th>
      <th>Locked</th>
      <th>Note</th>
      <th>Date of last donation</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @donors.each do |donor| %>
      <tr>
        <td><%= donor.first_name %></td>
        <td><%= donor.last_name %></td>
        <td><%= donor.email %></td>
        <td><%= donor.push_reg_id %></td>
        <td><%= donor.locked %></td>
        <td><%= donor.note %></td>
        <td><%= donor.date_of_last_donation %></td>
        <td><%= donor.dob %></td>
        <td><%= donor.gender %></td>
        <td><%= link_to 'Show', donor %></td>
        <td><%= link_to 'Edit', edit_donor_path(donor) %></td>
        <td><%= link_to 'Destroy', donor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

