<h1>Listing donations</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Notes</th>
      <th>User</th>
      <th>Institution</th>
      <th>Blood group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.time %></td>
        <td><%= donation.notes %></td>
        <td><%= donation.user_id %></td>
        <td><%= donation.institution_id %></td>
        <td><%= donation.blood_group_id %></td>
        <td><%= link_to 'Show', donation %></td>
        <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
        <td><%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation', new_donation_path %>
