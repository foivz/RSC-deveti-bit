<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="@drawable/background_2"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    <ImageView
        android:id="@+id/slika_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="left"
        android:background="@drawable/profile_image_background"
        android:src="@drawable/user_profile_image" />
    
    <ImageView
        android:id="@+id/slika_medal"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:src="@drawable/gold" />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="18sp"
        android:layout_marginTop="25dp" />
    <TextView 
        android:id="@+id/prezime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:textSize="18sp" />
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="5dp"
    	android:orientation="horizontal" >
	    <TextView 
	        android:id="@+id/email"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:textSize="18sp" />
    	<ImageView
	        android:id="@+id/slika_fb"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_gravity="right"
	        android:src="@drawable/fb_small" />
    	<ImageView
	        android:id="@+id/slika_google"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_gravity="right"
	        android:layout_marginLeft="10dp"
	        android:src="@drawable/google_plus_small" />
    </LinearLayout>
    
    <ListView
        android:id="@+id/lista1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:choiceMode="singleChoice"
    	android:divider="#DCDDDE"
    	android:dividerHeight="2dp"
    	android:listSelector="@android:color/transparent" />

</LinearLayout>
